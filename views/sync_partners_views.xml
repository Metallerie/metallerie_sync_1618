<odoo>
    <data>
        <!-- Action serveur pour la synchronisation des partenaires -->
        <record id="action_sync_partners" model="ir.actions.server">
            <field name="name">Synchroniser Partenaires</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">
                action = env['metallerie.sync.partner'].sync_v16_to_v18()
            </field>
        </record>

        <!-- Menu pour la synchronisation des partenaires -->
        <menuitem id="menu_sync_partners"
                  name="Synchronisation Partenaires"
                  parent="base.menu_administration"
                  action="action_sync_partners"/>
    </data>
</odoo>
