<odoo>
    <!-- Vue pour la synchronisation des partenaires -->
    <record id="view_partner_form_sync_button" model="ir.ui.view">
        <field name="name">res.partner.form.sync.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_sync_partners)d"
                        string="Synchroniser"
                        type="action"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <!-- Action serveur pour la synchronisation -->
    <record id="action_sync_partners" model="ir.actions.server">
        <field name="name">Synchroniser Partenaires</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
            action = env['metallerie.sync.partner'].sync_v16_to_v18()
        </field>
    </record>

    <!-- Vue pour la synchronisation des sociétés -->
    <record id="view_company_form_sync_button" model="ir.ui.view">
        <field name="name">res.company.form.sync.button</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_sync_companies)d"
                        string="Synchroniser"
                        type="action"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <!-- Action serveur pour la synchronisation des sociétés -->
    <record id="action_sync_companies" model="ir.actions.server">
        <field name="name">Synchroniser Sociétés</field>
        <field name="model_id" ref="base.model_res_company"/>
        <field name="binding_model_id" ref="base.model_res_company"/>
        <field name="state">code</field>
        <field name="code">
            action = env['metallerie.sync.company'].sync_v16_to_v18()
        </field>
    </record>
</odoo>
